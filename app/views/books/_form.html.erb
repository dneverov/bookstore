<%= form_with(model: book, local: true, class: "form-horizontal") do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, class: "col-xs-2 control-label" %>
    <div class="col-xs-8">
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "col-xs-2 control-label" %>
    <div class="col-xs-8">
      <%= form.text_area :description, class: "form-control", rows: 5 %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :cover, class: "col-xs-2 control-label" %>
    <div class="col-xs-8">
      <%= form.file_field :cover %>
    </div>
  </div>

  <div class="form-group actions">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit class: "btn btn-default" %>
    </div>
  </div>
<% end %>
